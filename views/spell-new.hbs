<h2>Create a New Spell</h2>

<form action='/spells' method='post'>

	<fieldset>
		<legend>
			Spell Data
		</legend>

		<div>
			<label for='name'>
				Name
			</label><br />
			<input type='text' name='name' id='name' />
		</div>

		<div>
			<label for='slug'>
				Slug
			</label><br />
			<input type='text' name='slug' id='slug' disabled />
		</div>

		<div>
			<label for='level'>
				Level
			</label><br />
			<input type='number' name='level' id='level' min='0' max='9' />
		</div>

		<div>
			<label for='school'>
				School
			</label><br />
			<select name='school' id='school'>
				<option label='' value='' hidden='true' />
				<option label='abjuration' value='abjuration' />
				<option label='conjuration' value='conjuration' />
				<option label='divination' value='divination' />
				<option label='enchantment' value='enchantment' />
				<option label='evocation' value='evocation' />
				<option label='illusion' value='illusion' />
				<option label='necromancy' value='necromancy' />
				<option label='transmutation' value='transmutation' />
			</select>
		</div>

		<hr />

		<div>
			<label for='cast-time'>
				Casting Time
			</label>
			<div id='cast-time' onchange="disableCastTimeNum()">

				<div>
					<input type='radio' name='cast-time' id='cast-time-action' value='action' />
					<label for='cast-time-action'>
						action
					</label>
				</div>

				<div>
					<input type='radio' name='cast-time' id='cast-time-bonus' value='bonus' />
					<label for='cast-time-bonus'>
						bonus action
					</label>
				</div>

				<div>
					<input type='radio' name='cast-time' id='cast-time-reaction' value='reaction' />
					<label for='cast-time-reaction'>
						reaction
					</label>
				</div>

				<div>
					{{!-- the value of this radio button should equal the value of the input number --}}
					{{!-- also the duration input should be disabled unless the radio button is checked --}}
					<input type='radio' name='cast-time' id='cast-time-discrete' value='discrete' />
					<input type='number' name='cast-time' id='cast-time-seconds' min='0' max='999999' placeholder='seconds' disabled />
					{{!-- min means minimum, max means maximimum, time unit is in seconds --}}
				</div>
			</div>
		</div>

		<div>
			<label for='duration'>
				Duration
			</label>
			<div id='duration' onchange="disableDurationNum()">

				<div>
					<input type='radio' name='duration' id='duration-instantaneous' value='instantaneous' />
					<label for='duration-instantaneous'>
						instantaneous
					</label>
				</div>

				<div>
					<input type='radio' name='duration' id='duration-indefinate' value='indefinate' />
					<label for='duration-indefinate'>
						indefinate
					</label>
				</div>

				<div>
					{{!-- the value of this radio button should equal the value of the input number --}}
					{{!-- also the duration input should be disabled unless the radio button is checked --}}
					<input type='radio' name='duration' id='duration-discrete' value='discrete' />
					<input type='number' name='duration' id='duration-seconds' min='0' max='999999' placeholder='seconds' disabled />
				</div>

				<div>
					<input type='checkbox' name='duration' id='duration-trigger' value='$trigger-on' />
					<label for='duration-trigger'>
						conditional trigger
					</label>
				</div>
			</div>
		</div>


		{{!-- duration trigger --}}

		<hr />

		<div>
			<label for='num-targets'>
				Number of Targets
			</label><br />
			<input type='number' name='num-targets' id='num-targets' min='0' max='999999' />
		</div>

		<div>
			<label for='range'>
				Range
			</label>
			<div id='range' onchange="disableRangeNum()">

				<div>
					<input type='radio' name='range' id='range-self' value='self' />
					<label for='range-self'>
						self
					</label>
				</div>

				<div>
					<input type='radio' name='range' id='range-touch' value='touch' />
					<label for='range-touch'>
						touch
					</label>
				</div>

				<div>
					<input type='radio' name='range' id='range-unlimited' value='unlimited' />
					<label for='range-unlimited'>
						unlimited
					</label>
				</div>

				<div>
					{{!-- the value of this radio button should equal the value of the input number --}}
					{{!-- also the range input should be disabled unless the radio button is checked --}}
					<input type='radio' name='range' id='range-discrete' value='discrete' />
					<input type='number' name='range' id='range-feet' min='0' max='999999' placeholder='feet' disabled />
				</div>
			</div>
		</div>

		<div>
			<label for='shape'>
				Shape
			</label><br />
			<select name='shape' id='shape'>
				<option label='' value='' hidden='true' />
				<option label='point' value='point' />
				<option label='sphere' value='sphere' />
				<option label='aura' value='aura' />
				<option label='cone' value='cone' />
				<option label='cube' value='cube' />
				<option label='line' value='line' />
				<option label='wall' value='wall' />
				<option label='cylinder' value='cylinder' />
			</select>
		</div>


		{{!-- these next four number-entry boxes are enabled only when the respective shape option is selected. --}}
		<div>
			<label for='area.radius'>
				Radius
			</label><br />
			<input type='number' name='area.radius' id='area.radius' min='0' max='999999' placeholder='feet' />
		</div>

		<div>
			<label for='length'>
				Length
			</label><br />
			<input type='number' name='length' id='length' min='0' max='999999' placeholder='feet' />
		</div>

		<div>
			<label for='width'>
				Width
			</label><br />
			<input type='number' name='width' id='width' min='0' max='999999' placeholder='feet' />
		</div>

		<div>
			<label for='height'>
				Height
			</label><br />
			<input type='number' name='height' id='height' min='0' max='999999' placeholder='feet' />
		</div>

		<hr />

		<div>
			<label for='tags'>
				Spell Tags
			</label>
			<div id='tags'>

				<div>
					<input type='checkbox' name='tags' id='tags-ritual' value='ritual' />
					<label for='tags-ritual'>
						ritual
					</label>
				</div>

				<div>
					<input type='checkbox' name='tags' id='tags-concentration' value='concentration' />
					<label for='tags-concentration'>
						concentration
					</label>
				</div>

				<div>
					<input type='checkbox' name='tags' id='tags-verbal' value='verbal' />
					<label for='tags-verbal'>
						verbal
					</label>
				</div>

				<div>
					<input type='checkbox' name='tags' id='tags-somatic' value='somatic' />
					<label for='tags-somatic'>
						somatic
					</label>
				</div>

				<div>
					<input type='checkbox' name='tags' id='tags-material' value='material' />
					<label for='tags-material'>
						material
					</label>
				</div>
			</div>
		</div>

		{{!-- this entire div should appear only when tags-material checkbox is on --}}
		{{!-- later versions of this app will have a more in-depth materials field --}}
		<div>
			<label for='targets'>
				Materials
			</label><br />
			<textarea name='materials' id='materials'></textarea>
		</div>

		<hr />

		{{!-- <div>
			<label for='class'>
				Classes
			</label><br />
			<input list='class-datalist' name='class' id='class-1' />â€“<br />
			<input list='class-datalist' name='class' id='class-0' />+

			<datalist id='class-datalist'>
				<option label='Cleric' value='Cleric' />
				<option label='Sorcerer' value='Sorcerer' />
				<option label='Wizard' value='Wizard' />
			</datalist>
		</div> --}}

		{{!-- this section clearly needs some love --}}
		{{!-- might need to add a class resource to reference --}}
		<div>
			<label for='class'>
				Classes
			</label><br />
			<div id='class'>

				<div>
					<input type='checkbox' name='class' id='class-cleric' value='cleric' />
					<label for='class-cleric'>
						cleric
					</label>
				</div>

				<div>
					<input type='checkbox' name='class' id='class-sorcerer' value='sorcerer' />
					<label for='class-sorcerer'>
						sorcerer
					</label>
				</div>

				<div>
					<input type='checkbox' name='class' id='class-wizard' value='wizard' />
					<label for='class-wizard'>
						wizard
					</label>
				</div>
			</div>
		</div>

		{{!-- this section clearly needs some love --}}
		{{!-- might need to add a subclass resource to reference --}}
		<div>
			<label for='subclass'>
				Subclasses
			</label><br />
			<div id='subclass'>

				<div>
					<input type='checkbox' name='subclass' id='subclass-twilight' value='twilight' />
					<label for='subclass-twilight'>
						druid: circle of twilight
					</label>
				</div>

				<div>
					<input type='checkbox' name='subclass' id='subclass-giant' value='giant' />
					<label for='subclass-giant'>
						sorcerer: giant's soul
					</label>
				</div>

				<div>
					<input type='checkbox' name='subclass' id='subclass-ancients' value='ancients' />
					<label for='subclass-ancients'>
						paladin: oath of the ancients
					</label>
				</div>
			</div>
		</div>


		{{!--
		<div>
			Subclasses
		</div>

		<div>
			Races and Subraces
		</div>
		--}}

		<hr />

		{{!--
		<input type='text' name='source' id='source' />
		<input type='number' name='page' id='page' />
		<a onclick="addSourceArray()">add source</a>
		<input name='parent-src' id='parent-src' />
		<hr />
		--}}

		<button type='submit'>
			Submit
		</button>
	</fieldset>
</form>

<script src='/js/spell-new.js'></script>