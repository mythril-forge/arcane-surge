<h2>Create a New Source</h2>

<form action='/sources' method='post'>

	<fieldset>
		<legend>
			Source Data
		</legend>

		<div>
			<label for='name'>
				Name
			</label><br />
			<input type='text' name='name' id='name' />
		</div>

		<div>
			<label for='abbreviation'>
				Abbreviation
			</label><br />
			<input type='text' name='abbreviation' id='abbreviation' />
		</div>

		<div>
			<label for='color'>
				Display Color
			</label><br />
			<input type='color' name='color' id='color' />
		</div>

		<div>
			<input type='checkbox' id='official' name='official' checked>
			<label for='official'>
				Official Source
			</label>
		</div>

		<div>
			<label for='references'>
				References
			</label>
			{{!-- these references should be disabled if official source is checked --}}
			<div id='references'>
				{{#each source}}
				<div>
					{{!-- Need a better way to add checked items to JSON --}}
					<input type='checkbox' id='{{this._id}}' name='{{this._id}}' value='$reference-on'>
					<label for='{{this._id}}'>{{this.name}}</label>
				</div>
				{{/each}}
			</div>
		</div>

		<button type='submit'>
			Submit
		</button>
	</fieldset>

</form>